{
    "manifest_version":2,
    "name": "Translate",
    "version": "0.1",

    "description": "Firefox extension to translate highlighted context",

    "background":{
        "scripts":["background.js"]
    },
    
    "permissions":[
        "webNavigation",
        "menus",
        "activeTab",
        "tabs"
    ],
    
    "browser_action":{
        "default_icon": "icon.jpg",
        "default_title": "Translate"
    }


        
    
}